{
  "version": "2.0",
  "validation_recipes": {
    "gemini_api": {
      "steps": [
        {
          "action": "configure_genai",
          "params": {
            "api_key": "{key}"
          }
        },
        {
          "action": "create_model",
          "params": {
            "model_name": "{test_model}"
          }
        },
        {
          "action": "generate_content",
          "params": {
            "prompt": "{test_prompt}"
          }
        },
        {
          "action": "check_response",
          "params": {
            "check_exists": true
          }
        }
      ],
      "error_handling": {
        "error_keywords": [
          "api key",
          "invalid",
          "unauthorized"
        ],
        "default_result": "invalid_key"
      }
    },
    "http_endpoint": {
      "steps": [
        {
          "action": "prepare_headers",
          "params": {
            "template": "{headers}",
            "replacements": {
              "{api_key}": "{key}"
            }
          }
        },
        {
          "action": "http_request",
          "params": {
            "method": "{method}",
            "url": "{endpoint}",
            "timeout": "{timeout}"
          }
        },
        {
          "action": "check_status_code",
          "params": {
            "success_codes": "{success_codes}"
          }
        }
      ],
      "error_handling": {
        "default_result": "invalid_key"
      }
    },
    "openai_compatible": {
      "steps": [
        {
          "action": "prepare_headers",
          "params": {
            "template": "{headers}",
            "replacements": {
              "{api_key}": "{key}"
            }
          }
        },
        {
          "action": "http_request",
          "params": {
            "method": "GET",
            "url": "{endpoint}",
            "timeout": "{timeout}"
          }
        },
        {
          "action": "check_status_code",
          "params": {
            "success_codes": [
              200
            ]
          }
        }
      ],
      "error_handling": {
        "error_keywords": [
          "invalid",
          "unauthorized",
          "forbidden"
        ],
        "default_result": "invalid_key"
      }
    }
  },
  "validators": {
    "GEMINI": {
      "recipe": "gemini_api",
      "variables": {
        "test_model": "models/gemini-1.5-flash",
        "test_prompt": "Hi"
      }
    },
    "GROQ": {
      "recipe": "openai_compatible",
      "variables": {
        "endpoint": "https://api.groq.com/openai/v1/models",
        "headers": {
          "Authorization": "Bearer {api_key}"
        },
        "timeout": 10
      }
    },
    "OPENROUTER": {
      "recipe": "http_endpoint",
      "variables": {
        "method": "GET",
        "endpoint": "https://openrouter.ai/api/v1/auth/key",
        "headers": {
          "Authorization": "Bearer {api_key}"
        },
        "success_codes": [
          200
        ],
        "timeout": 10
      }
    },
    "OPENAI": {
      "recipe": "openai_compatible",
      "variables": {
        "endpoint": "https://api.openai.com/v1/models",
        "headers": {
          "Authorization": "Bearer {api_key}"
        },
        "timeout": 10
      }
    },
    "ANTHROPIC": {
      "recipe": "http_endpoint",
      "variables": {
        "method": "POST",
        "endpoint": "https://api.anthropic.com/v1/messages",
        "headers": {
          "x-api-key": "{api_key}",
          "anthropic-version": "2023-06-01",
          "content-type": "application/json"
        },
        "success_codes": [
          200,
          400
        ],
        "timeout": 10
      }
    },
    "MISTRAL": {
      "recipe": "openai_compatible",
      "variables": {
        "endpoint": "https://api.mistral.ai/v1/models",
        "headers": {
          "Authorization": "Bearer {api_key}"
        },
        "timeout": 10
      }
    },
    "DEEPSEEK": {
      "recipe": "openai_compatible",
      "variables": {
        "endpoint": "https://api.deepseek.com/v1/models",
        "headers": {
          "Authorization": "Bearer {api_key}"
        },
        "timeout": 10
      }
    },
    "XAI": {
      "recipe": "openai_compatible",
      "variables": {
        "endpoint": "https://api.x.ai/v1/models",
        "headers": {
          "Authorization": "Bearer {api_key}"
        },
        "timeout": 10
      }
    },
    "ELEVENLABS": {
      "recipe": "http_endpoint",
      "variables": {
        "method": "GET",
        "endpoint": "{validation_endpoint}",
        "headers": {
          "Accept": "application/json",
          "xi-api-key": "{api_key}"
        },
        "success_codes": [
          200
        ],
        "timeout": 10
      }
    }
  }
}